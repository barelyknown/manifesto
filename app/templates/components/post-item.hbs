<div class="post">
  <div class="mb-4">
    <div class="font-semibold text-lg mb-1">
      {{#link-to
        "posts.show"
        @post.slug
        class="text-black border-b border-dashed border-grey no-underline text-2xl"
      }}
        {{@post.title}}
      {{/link-to}}
    </div>

    <div class="text-xs">
      {{moment-format
        post.postedAt
        "LLLL"
        timeZone=@post.timeZone
      }}

      {{#if @post.location}}
        {{fa-icon "globe" class="ml-2"}} {{@post.location}}
      {{/if}}
    </div>
  </div>

  <div class="text-lg">
    {{#if @post.loadBodyTask.isRunning}}
      Loading...
    {{else}}
      {{markdown-to-html markdown=@post.body}}
    {{/if}}
  </div>
</div>
