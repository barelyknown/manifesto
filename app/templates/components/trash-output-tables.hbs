<p>
  <div class="table w-full bg-white border border-collapse">
    <div class="table-row font-bold">
      <div class="table-cell border border-{{this.borderColor}} p-{{this.cellPadding}} w-1/3">
        Kind
      </div>
      <div class="table-cell border border-{{this.borderColor}} p-{{this.cellPadding}} w-1/3 text-right">
        %
      </div>
      <div class="table-cell border border-{{this.borderColor}} p-{{this.cellPadding}} w-1/3 text-right">
        Lbs
      </div>
    </div>
    {{#if this.lbsByKind}}
      {{#each this.lbsByKind as |g|}}
        <div class="table-row">
          <div class="table-cell border border-{{this.borderColor}} p-{{this.cellPadding}}">
            {{g.kind}}
          </div>
          <div class="table-cell border border-{{this.borderColor}} p-{{this.cellPadding}} text-right">
            {{format-number (mult 100 (div g.lbs totalLbs)) precision=0}}%
          </div>
          <div class="table-cell border border-{{this.borderColor}} p-{{this.cellPadding}} text-right">
            {{format-number g.lbs precision=1}}
          </div>
        </div>
      {{/each}}
      <div class="table-row font-bold">
        <div class="table-cell p-{{this.cellPadding}}">
          Total
        </div>
        <div class="table-cell">

        </div>
        <div class="table-cell border border-{{this.borderColor}} p-{{this.cellPadding}} text-right">
          {{format-number this.totalLbs precision=1}}
        </div>
      </div>
    {{else}}
      <div class="table-row">
        <div class="table-cell p-{{this.cellPadding}}">
          Loading data...
        </div>
        <div class="table-cell">
        </div>
        <div class="table-cell">
        </div>
      </div>
    {{/if}}
  </div>
</p>

